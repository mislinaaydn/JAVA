
import java.util.Scanner;

public class aralikCift1 {
    public static void main(String[] args) {

        int toplam = 0;
        Scanner input = new Scanner(System.in);

        System.out.print("Alt değer giriniz : ");
        int altDeger = input.nextInt();

        System.out.print("Üst değer giriniz : ");

        int ustDeger = input.nextInt();

        for (int i = altDeger + 1; i < ustDeger; i++) {
            if (i % 2 == 0) {
                toplam = toplam + i;
            }
        }
        System.out.print("çift sayı toplamı : " + toplam);
        input.close();

    }
}




